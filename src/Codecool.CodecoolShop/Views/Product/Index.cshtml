@{
    ViewData["Title"] = "Home Page";
}

@model List<(List<Product>, List<ProductCategory>, List<Supplier>) >

<div class="container">
    @using (Html.BeginForm("ChangeFilter", "Product", FormMethod.Post))
    {
        <div class="product-list-parameters-grid">
            <div class="parameters-grid">
                <div class="select-by-type"><p style="font-weight: bold; font-size: 20px; margin:0px;">Filters</p></div>
                <div class="select-by-type" type="suppliers">
                    <select name="supplierId" class="form-select">
                        <option selected="selected" value="">Category</option>
                        @foreach (Supplier supplier in Model[0].Item3)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </select>
                </div>
                <div class="select-by-type" type="categories">
                    <select name="pCategoryId" class="form-select">
                        <option selected="selected" value="">Suplier</option>
                        @foreach (ProductCategory pCategory in Model[0].Item2)
                        {
                            <option value="@pCategory.Id">@pCategory.Name</option>
                        }
                    </select>
                </div>
                <div class="select-by-type">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    }
    @foreach (var element in Model[0].Item1)
    {
        <div class="col-lg-3 col-lg-3" style="display: inline-block; max-width: 350px; height: 350px">
            <div class="card">
                <img src="img/@(element.Name).jpg" style="height: 50%; width: 50%; align-self: center; padding-top: 10px">

                <div class="card-body">
                    @*<h5 class="card-title text-center">
                            Product
                            @{ var num = Model[0].Item1.IndexOf(element) + 1;}
                            @num
                        </h5>*@
                    <h5 class="card-title">@element.Name</h5>
                    <p class="card-text">@element.Description.</p>
                    <p class="card-text">Category: @element.ProductCategory.Department</p>
                    <p class="card-text">Supplier: @element.Supplier.Name</p>
                    <p class="card-text text-center"><strong>Price: @element.DefaultPrice.ToString("C2")</strong></p>
                    <a type="button" class="btn btn-primary" style="float: bottom" asp-controller="Cart" asp-action="AddProduct" asp-route-id="@element.Id">Add To Cart</a>
                </div>
            </div>
        </div>
    }
    <script src="~/js/Controller.js"></script>
    <script type="text/javascript">index_start()</script>
    </div>
